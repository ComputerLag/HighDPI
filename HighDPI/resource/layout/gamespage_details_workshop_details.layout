"resource/layout/gamespage_details_workshop_details.layout"
{
	controls
	{
		workshopdetails { controlname="CWorkshopDetailsPanel" }
		workshop_banner { controlname="ImagePanel" image=resource/workshop_banner zpos=-1 style="workshop_banner" }
		workshop_description { controlname="RichText" style="workshop_description" text="#steam_community_files_info" }
	}
	
	colors
	{
		WorkshopDetailsPanel.ExtraVerticalSpacing "225"
		WorkshopDetailsPanel.ExtraHorizontalSpacing "406"
		RichText.InsetX "12"
		RichText.InsetY "4" 		
	}
	
	styles
	{
		workshop_description
		{
			textcolor="Label"
			selectedtextcolor="Label"	
			render_bg {}
			font-size=30
			font-family=basefont
		}
	}

	layout
	{
		place { region=body control=workshop_description x=0 y=120 width=400 height=110 }
		place { region=body control=workshop_banner x=1 y=0 width=400 height=104 align=left }
	}
}
